# Variabili di compilazione
NAME		=	lib/libpushswap.a
EXECUTABLE	=	push_swap
CC			=	gcc
CFLAGS		=	-Wall -Wextra -Werror
RM			=	rm -rf

# Cartelle di lavoro
SRC_DIR = src
OBJ_DIR = obj
INC_DIR = include
LIB_DIR = lib

# File sorgenti e oggetto
SRC = $(wildcard $(SRC_DIR)/*.c)
OBJ = $(patsubst $(SRC_DIR)/%.c,$(OBJ_DIR)/%.o,$(SRC))

all: $(OBJ_DIR) $(NAME)
	@$(CC) -o $(EXECUTABLE) -L./lib/ -lpushswap -lft
	@echo .
	@echo .
	@echo push_swap is now ready

# Regola per creare la cartella degli oggetti
$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)

# Regola per la libreria
$(NAME): $(OBJ)
	@if [ ! -d $(LIB_DIR) ]; then mkdir -p $(LIB_DIR); fi
	@ar rcs $(NAME) $(OBJ)

# Regole di compilazione degli oggetti
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@$(CC) -c -o $@ $< $(CFLAGS) -I$(INC_DIR)

clean:
	@$(RM) $(OBJ_DIR)
	@echo .
	@echo .
	@echo The object files have been removed

fclean: clean
	@$(RM) $(NAME) $(EXECUTABLE)
	@if [ -d $(OBJ_DIR) ]; then $(RM) $(OBJ_DIR); fi
	@echo .
	@echo .
	@echo The executable has been removed

re: fclean all

# Dichiarazione dei target che non sono file da creare
.PHONY:	all clean fclean re
